<%= search_form_for @p, url: ideas_search_path do |f| %>
  <%= f.label :name_eq, 'idea' %>
  <%= f.collection_select :name_eq, @categories, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.submit '検索' %>
<% end %>
<div>
  <% @ideas.each do |idea| %>
    <div>
      <p><%=@categories%></p>
      <span>
        <%= idea.body %>
      </span>
    </div>
  <% end %>
</div>
<div>
  <%= link_to 'アイデア登録', new_idea_path%>
</div>

